
public class Bai1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] arr= new int[] {9, 5, 10, 10, 15, 9, 10};
		int max = arr[0];
		for (int i =0; i< arr.length; i++) {
			if (arr[i] > max) {
                max = arr[i];
            }
		}
		System.out.println("Maximum is: "+ max + ", at index: "+ i);
	}

}
